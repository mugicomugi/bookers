　<ul>
　  <% @book.errors.full_messages.each do |message| %>
　<li><%= message %></li>
　 <% end %>
<% end %>

<%= form_with model: @book, method: :post do |f| %>

<div>
   <strong>Title</strong><br>
    <%= f.text_field :title %>
</div>
<div>
    <strong>Body</strong><br>
    <%= f.text_area :body %>
</div>
<div>
    <%= f.submit 'Create Book' %>
</div>
<% end %>








