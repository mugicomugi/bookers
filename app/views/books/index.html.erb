
<h1>Books</h1>
  <%= flash[:notice] %>
<table>
    <thead>
        <tr>
            <tr>Title</tr>
            <tr>Body</tr>
            <tr colspan="3"></tr>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>
                <%= link_to "show", book_path(book.id) %>
            </td>
            <td>
                <%= link_to "edit", edit_book_path(book) %>
            </td>
            <td>
                <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
    

<h2>New Book</h2>

<%= form_with model: @book, method: :post do |f| %>

 <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div>
    <h4>Title</h4>
    <%= f.text_field :title %>
</div>
<div>
    <h4>Body</h4>
    <%= f.text_area :body %>
</div>
<div>
    <%= f.submit 'Create Book' %>
</div>
<% end %>








